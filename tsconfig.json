{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "Node",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "baseUrl": ".",
        "incremental": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build"]
}
